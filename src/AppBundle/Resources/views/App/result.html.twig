{% extends "::base.html.twig" %}

{% block title %}AppBundle:App:result{% endblock %}

{% block body %}
    <a href="{{ path("articles") }}" class="btn btn-danger">
        <span class="glyphicon glyphicon-chevron-left"></span> Back
    </a>

    <h1>Search result:</h1>
    <h3>Category selected: {{ categoryName }}</h3>

    <table class="table table-stripped">
        <tr>
            <th>Title</th>
            <th>Image</th>
            <th>Price</th>
            <th>More Info</th>
        </tr>
        {% for art in articles %}

            {% if art.number > 0 %}
                <tr>
                    <td>{{ art.name }}</td>
                    <td><img style="max-width:100px;" src="{{ art.imgUrl }}"></td>
                    <td> $ {{ art.price }} </td>
                    <td>
                        <a href="{{ path("detailArticle", {'id':art.id}) }}" class="btn btn-info">
                            <span class="glyphicon glyphicon-info-sign"></span> See
                        </a>
                    </td>
                </tr>
            {% endif %}

        {% endfor %}
    </table>
{% endblock %}
